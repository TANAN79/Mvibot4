<launch>
	  <arg name="mvibot_seri" default=""/>
	  <node pkg="laser_scan_matcher" type="laser_scan_matcher_node" name="laser_scan_matcher" output="screen" respawn="true">
    
		<param name="fixed_frame" value="$(arg mvibot_seri)/odom" />
		<param name="base_frame" value="$(arg mvibot_seri)/base_footprint" />

		<remap from="scan" to="/$(arg mvibot_seri)/laser/scan" />
		<remap from="pose_stamped" to="/$(arg mvibot_seri)/pose_laser"/>
		<param name="publish_tf" value="false" />
		<param name="use_imu" value="false" />
		<param name="use_odom" value="true" />
		<param name="use_vel" value="false" />
		<param name="publish_pose" value="false" />
		<param name="publish_pose_stamped" value="true" />  
		<!-- <param name="kf_dist_angular" value="0.17"/>
		<param name="kf_dist_linear" value="0.1"/> -->
		 <param name="max_linear_correction" value="0.2" />
		 <param name="max_angular_correction_deg" value="15" /> 
		 <remap from="imu/data" to="/$(arg mvibot_seri)/imu" />
		<remap from="odom" to="/$(arg mvibot_seri)/odom_wheel" />
	</node>
</launch>
